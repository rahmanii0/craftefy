---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Abd-Elrahman Mohamed</div>
    <div class="text-m py-3 font-bold">Full-stack developer , with startup and open-source experience. Very eager to learn, strongly communicative, self-driven to solve and create.</div>
    <div class="py-2">
      <text class="text-lg">
        This is <b>Craftefy </b> My Personal Portfolio, Blog, Journey, Projects , all about me is here .
         Enjoy your tour .
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="https://twitter.com/mon_eam" target="_blank"> Let's connect!</a>
    
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My last projects {"</>"}</div>
  </div>

  <HorizontalCard
    title="Ai-Photo-Generator"
    img="/gpt.jpg"
    desc="Node js code to generate images based on your own description"
    url="https://github.com/rahmanii0/Ai-Photo-Generator"
    badge="NEW"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Cards-game-with-Elixir"
    img="/elixir.png"
    desc="Elixir code to simulate cards game"
    url="https://github.com/rahmanii0/Cards-game-with-Elixir"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Laravel-Complete-Forum"
    img="/laravel.jpeg"
    desc="A forum that's lookslike Udemy Courses Forum"
    url="https://github.com/rahmanii0/Laravel-Complete-Forum"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Latest from blog</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
